        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/candy_blue3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/candy_blue3"
        app:layout_constraintTop_toTopOf="@+id/candy_blue3"
        app:srcCompat="@drawable/one_two" />


