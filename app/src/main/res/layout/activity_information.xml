<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/candy_background2"
    tools:context=".information">

    <TextView
        android:id="@+id/about_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/candy"
        android:text="@string/about_the_game"
        android:textAlignment="center"
        android:textColor="#a95632"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/about_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/beans"
        android:text="@string/description_about_us"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="normal"
        android:textColor="#ffffff"
        app:lineHeight="20dp" />

    <TextView
        android:id="@+id/about_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/candy"
        android:text="@string/about_dev"
        android:textAlignment="center"
        android:textColor="#a95632"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dev_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_dev"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/beans"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="normal"
        android:textColor="#ffffff"
        app:lineHeight="20dp"/>


</LinearLayout>