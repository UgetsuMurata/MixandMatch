<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/candy_background"
    android:padding="15dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/delete"
                android:onClick="click_leaderboard"
                android:scaleType="fitCenter"
                android:src="@drawable/delete" />

            <Button
                android:id="@+id/user_id"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginEnd="46dp"
                android:fontFamily="@font/candy"
                android:text="@string/guest"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/settings_desc"
                android:onClick="click_settings"
                android:scaleType="fitCenter"
                android:src="@drawable/settings"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/icon_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/about_desc"
                android:onClick="click_info"
                android:scaleType="fitCenter"
                android:src="@drawable/info"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/icon_leaderboard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/leaderboard_desc"
                android:onClick="click_leaderboard"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_leaderboard_24"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/candy"
            android:scaleX="1"
            android:text="@string/mix_and_match"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFE60B"
            android:textSize="45sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/scroll_desc"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/one_one" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/two_one" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/three_one" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/four_one" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/five_one" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/six_one" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/seven_one" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/eight_one" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/nine_one" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/ten_one" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/user_id3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/candy"
                android:text="@string/easy"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <Button
                android:id="@+id/user_id2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/candy"
                android:text="@string/moderate"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <Button
                android:id="@+id/user_id4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/candy"
                android:text="@string/hard"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>